<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pupuk</title>
    <!-- Link ke Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Link ke Font Awesome untuk ikon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/fontawesome.min.css"
        integrity="sha512-B46MVOJpI6RBsdcU307elYeStF2JKT87SsHZfRSkjVi4/iZ3912zXi45X5/CBr/GbCyLx6M1GQtTKYRd52Jxgw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body style="padding: 0px !important;">
    <div class="container mt-5">
        <h3 class="text-center mb-4">Daftar Pupuk</h3>
        <!-- Menampilkan pesan flash jika ada -->
        <% if (flash.status) { %>
            <div class="alert alert-<%= flash.color %>" role="alert">
                <strong><%= flash.status %>!</strong> <%= flash.message %>
            </div>
        <% } %>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nama Pupuk</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% pupuks.forEach((pupuk, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= pupuk.name %></td>
                        <td><%= pupuk.price %></td>
                        <td>
                            <a href="/pupuk/edit/<%= pupuk.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/pupuk/delete/<%= pupuk.id %>" class="btn btn-danger btn-sm">Hapus</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="text-center">
            <a href="/pupuk/create" class="btn btn-success">Tambah Pupuk</a>
        </div>
    </div>
</body>

</html>
